{# templates/contacts/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contact Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-4 mb-4">Contact Details</h1>

        <div class="row">
            <div class="col-lg-6">
                <ul class="list-group">
                    <li class="list-group-item"><strong>ID:</strong> {{ contact.id }}</li>
                    <li class="list-group-item"><strong>Firstname:</strong> {{ contact.firstname }}</li>
                    <li class="list-group-item"><strong>Lastname:</strong> {{ contact.lastname }}</li>
                    <li class="list-group-item"><strong>Email:</strong> {{ contact.email }}</li>
                </ul>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-lg-6">
                <a href="{{ path('app_contacts') }}" class="btn btn-primary">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}