{# templates/contacts/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Contact{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-4 mb-4">Edit Contact</h1>

        <div class="row">
            <div class="col-lg-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-lg-6">
                <a href="{{ path('app_contacts') }}" class="btn btn-secondary">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}