{# templates/contacts/create.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create New Contact{% endblock %}

{% block body %}
    <h1>Create New Contact</h1>

    {{ form_start(form) }}
    <div>
        {{ form_label(form.firstname) }}
        {{ form_widget(form.firstname) }}
        {% if form.firstname.vars.errors|length %}
            <div class="alert alert-danger">
                {% for error in form.firstname.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div>
        {{ form_label(form.lastname) }}
        {{ form_widget(form.lastname) }}
        {% if form.lastname.vars.errors|length %}
            <div class="alert alert-danger">
                {% for error in form.lastname.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div>
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {% if form.email.vars.errors|length %}
            <div class="alert alert-danger">
                {% for error in form.email.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <button type="submit">Create</button>
    {{ form_end(form) }}

    <a href="{{ path('app_contacts') }}">Back to list</a>
{% endblock %}